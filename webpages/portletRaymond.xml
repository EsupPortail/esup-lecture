<?xml version="1.0" encoding="UTF-8"?>

<portlet-app
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
	version="1.0">

	<!-- description du déploiement de la portlet -->
	<portlet>
		<!-- identifiant unique de notre portlet -->
		<portlet-name>lecture</portlet-name>
		<!-- Aiguilleur des requetes vers les controlleurs -->
		<portlet-class>
			org.esupportail.lecture.portlet.MyLecturePortlet
		</portlet-class>
		<init-param>
			<!-- vue à utiliser par défaut -->
			<name>default-view</name>
			<!-- apres: <value>/home.jsp</value> -->
			<value>/home2.jsp</value>
		</init-param>
		<supports>
			<!-- mode et supports traités par la portlet -->
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Lecture</title>
			<short-title>Portlet lecture</short-title>
			<keywords>XML generic display</keywords>
		</portlet-info>
	</portlet>

</portlet-app>