<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
	
	>

	<!-- 
		/properties/auth/auth.xml
		The configuration file for authentication.
		This file should not be modified but by the developers.
		This file is referenced by /properties/applicationContext.xml.
	-->

	<bean 
		id="authenticationService"
		class="org.esupportail.commons.services.authentication.PortalOrCasFilterAuthenticationService"
		>
		<description>
			The name of the Portal attribute that holds the uid of users, as set in portlet.xml.
		</description>
		<property name="uidPortalAttribute" value="uid" />
	</bean>

<!-- 
	<bean 
		id="authenticationService"
		class="org.esupportail.commons.services.authentication.OfflineFixedUserAuthenticationService"
		>
		<property name="authId" value="bourges"></property>
		<property name="authType" value="web"></property>
	</bean>
 -->

    <bean 
        id="servletCasService"
        class="org.esupportail.commons.services.cas.ServletCasServiceImpl"
        >
    </bean>

    <bean 
        id="portletCasService"
        class="org.esupportail.commons.services.cas.PortletCasServiceImpl"
        scope="session"
        >
        <property name="service" value="${casService.service}" >
            <description>
                The service that retrieves PTs from the CAS server. This property
                must be the same as the one set in parameter casTargetService
                used when publishing the portlet.
            </description>
        </property>
        <property name="casValidateUrl" value="${casService.url}/proxyValidate" >
            <description>
                The URL used on the CAS server to validate the ticket passed by 
                the portal to the portlet.
            </description>
        </property>
        <property name="proxyCallbackUrl" value="${casService.proxyCallbackUrl}" >
            <description>
                The callback URL used by the CAS server to pass the PGT to
                the portlet.
            </description>
        </property>
        <!-- tmp V2 
        <aop:scoped-proxy/>
        -->
    </bean>

</beans>