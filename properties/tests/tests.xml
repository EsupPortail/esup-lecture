<?xml version="1.0" encoding="UTF-8" ?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<!-- 
		/properties/test/tests.xml
		The configuration file for data tests.
		This file is referenced by /properties/applicationContext.xml.
	-->
	<!-- DAO proxy for Spring sessionfactory integration -->
	<bean id="testHibernateInterceptor" class="org.springframework.orm.hibernate3.HibernateInterceptor">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>

	<bean id="testProxyDao"
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="testProxyDaoTarget" />
		<property name="interceptorNames">
			<list>
				<value>testHibernateInterceptor</value>
			</list>
		</property>
	</bean>

	<bean id="testProxyDaoTarget" class="org.esupportail.lecture.test.drivers.TestProxyDao">
		<property name="daoService" ref="daoService2"/>
	</bean>

