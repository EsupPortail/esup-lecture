<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.esupportail.lecture.domain.model">
	<class name="UserProfile" table="USERPROFILE">
		<id name="userProfilePK" type="long">
			<column name="USERPROFILEPK" sql-type="int"/>
			<generator class="native" />
		</id>
		<property name="userId" type="string">
            <column name="USERID" length="250" not-null="true" unique="true">
            </column>		
		</property>
		<map name="customContexts" inverse="true" cascade="save-update">
			<key>
				<column name="USERPROFILE_USERPROFILEPK" not-null="true" />
			</key>
			<index column="CONTEXTID" type="string"/>
			<one-to-many class="CustomContext" />
		</map>
		<map name="customCategories" inverse="true" cascade="save-update">
			<key>
				<column name="USERPROFILE_USERPROFILEPK" not-null="true"/>
			</key>
			<map-key type="string" >
				<!-- 
				I use a formula (so just a read-only access) because when I use a <column> hibernate tries to put null in the key when
				I remove CustomManagedCategory from CustomContext.subscriptions and this violates not null constraint on the column table
				 -->
				<formula>PROFILEID</formula>
			</map-key>
			<one-to-many class="CustomCategory" />
		</map>
		<map name="customSources" inverse="true" cascade="save-update">
			<key>
				<column name="USERPROFILE_USERPROFILEPK" not-null="true"/>
			</key>
			<map-key type="string" >
				<!-- 
				I use a formula (so just a read-only access) because when I use a <column> hibernate tries to put null in the key when
				I remove CustomManagedCategory from CustomContext.subscriptions and this violates not null constraint on the column table
				 -->
				<formula>PROFILEID</formula>
			</map-key>
			<one-to-many class="CustomSource" />
		</map>
	</class>
</hibernate-mapping>