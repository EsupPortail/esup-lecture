<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.esupportail.lecture.domain.model">
	<class name="CustomContext" table="CUSTOMCONTEXT">
		<id name="customContextPK" type="long">
			<column name="CUSTOMCONTEXTPK" sql-type="int"/>
			<generator class="native" />
		</id>
		<property name="treeSize" type="int">
			<column name="TREEWINWIDTH" not-null="true"/>
		</property>
		<property name="contextId" type="string">
			<column name="CONTEXTID" length="250" not-null="true" unique="true"/>
		</property>
		<many-to-one name="userProfile" class="UserProfile">
			<column name="USERPROFILE_USERPROFILEPK" not-null="true"/>
		</many-to-one>
		<map name="subscriptions">
			<key>
				<column name="CUSTOMCONTEXT_CUSTOMCONTEXTPK_SUBSCRIBED"/>
			</key>
			<map-key type="string" >
				<!-- 
				I use a formula (so just a read-only access) because when I use a <column> hibernate tries to put null in the key when
				I remove CustomManagedCategory from CustomContext.subscriptions and this violates not null constraint on the column table
				 -->
				<formula>CUSTOMCATEGORYID</formula>
			</map-key>
			<!-- 
			<index type="string" >
				<column name="CUSTOMCATEGORYID"/>
			</index>
			 -->
			<one-to-many class="CustomManagedCategory" />
		</map>
		<set name="foldedCategories" table="FOLDEDCATEGORY">
			<key>
				<column name="CUSTOMCONTEXT_CUSTOMCONTEXTPK"/>
			</key>
			<element type="string" length="250"/>
		</set>
	</class>
</hibernate-mapping>