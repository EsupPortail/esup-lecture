		access="public"
		ttl = "3600"
		timeout = "3000">
	 	<visibility>
	 		<allowed/>
			<autoSubscribed/>
			<obliged>	
				<group name="local.101"/> <!-- Etablissement -->
				<group name="pags.LECTEURS"/>
				<group name="pags.RETRAITESPERS"/>
			</obliged>	
		</visibility>
	</categoryProfile>

 	<categoryProfile 
		name="categorie fils RSS Rennes 1"
		id="rss-rennes1"
		urlCategory="&repConf;rss-rennes1.example.xml"
		trustCategory="no"
		access="public"
		ttl = "3600"
		timeout = "3000">
	 	<visibility>
	 		<allowed/>
			<autoSubscribed>	
				<group name="local.101"/> <!-- Etablissement -->
				<group name="pags.LECTEURS"/>
				<group name="pags.RETRAITESPERS"/>
			</autoSubscribed>	
			<obliged/>	
		</visibility>
	</categoryProfile>

	<categoryProfile 
		name="categorie presse"
		id="presse"
		urlCategory="&repConf;presse.example.xml"
		trustCategory="no"
		access="public"
		ttl = "3600"
		timeout = "3000">
	 	<visibility>
	 		<allowed>
				<group name="local.101"/> 
				<group name="pags.RETRAITESPERS"/>
			</allowed>
			<autoSubscribed/>
			<obliged/>	
