<channelConfig>
	<ttl>0</ttl>
	<guestUser>guest</guestUser>
	<context 
		name = "Actualités"
		id = "default">
		<description>Actualités</description> 
		<refCategoryProfile refId="annonces"/>         <!-- portlet news : categorie Annonces Rennes 1 -->
		<refCategoryProfile refId="rss-rennes1"/>      <!-- fils rss Rennes 1 -->
