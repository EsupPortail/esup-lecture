	<context 
	  name = "Presse"
	  id = "presse">
	  <description>Annonces de la recherche</description> 
		<refCategoryProfile refId="presse"/> 	         <!-- fils rss presse -->
	</context>

	<categoryProfile 
		name="categorie annonces Rennes 1"
		id="annonces"
		urlCategory="&httpConf;newsPortlet/feeds/pub/rss?t=3&#38;cID=3"
