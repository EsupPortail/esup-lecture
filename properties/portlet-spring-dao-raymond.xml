<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="lectureTools" class="org.esupportail.lecture.domain.model.LectureTools">
		<property name="daoService">
			<ref bean="daoServiceImpl" />
		</property>
	</bean>

	<!-- DAO service de test -->
	<bean id="daoServiceStub"
		class="org.esupportail.lecture.dao.DaoServiceStub">
	</bean>

	<!-- Entry point to facade services -->
	<bean id="facadeService" class="org.esupportail.lecture.domain.service.FacadeService">
		<property name="domainService">
			<ref bean="domainService"/>
		</property>
		<property name="portletService">
			<ref bean="portletService"/>
		</property>
	</bean>	
	
	<!-- Entry point to portlet services -->
	<bean id="portletService" class="org.esupportail.lecture.domain.service.impl.PortletServiceImpl">
	</bean>
	

	<!-- Entry point to domain services -->
	<bean id="domainService" class="org.esupportail.lecture.domain.service.impl.DomainServiceImplRaymond"> <!--  depends-on="lectureTools"> -->
		<property name="facadeService">
			<ref bean="facadeService"/>
		</property>
		<property name="myChannel">
			<ref bean="channel"/>
		</property>
	</bean>

	<!-- Main domain model class -->
	<bean id="channel" class="org.esupportail.lecture.domain.model.Channel">
		<property name="daoService">
			<ref bean="daoServiceImpl"/>
		</property>
	</bean>
	
	<!-- DAO Remote XML -->
	<bean id="daoServiceRemoteXML"
		class="org.esupportail.lecture.dao.impl.DaoServiceRemoteXML">
	</bean>

	<!-- DAO Impl -->
	<bean id="daoServiceImpl"
		class="org.esupportail.lecture.dao.impl.DaoServiceImpl">
		<property name="hibernateService">
			<ref bean="daoServiceHibernate" />
		</property>
		<property name="remoteXMLService">
			<ref bean="daoServiceRemoteXML" />
		</property>
	</bean>

	<!-- DAO Hibernate -->
	<bean id="daoServiceHibernate"
		class="org.esupportail.lecture.dao.impl.DaoServiceHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<!-- Hibernate sessionFactory -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="mappingResources">
			<list>
<!-- 
				<value>customCategory.hbm</value>
				<value>customSource.hbm</value>
 -->
				<value>customContext.hbm</value>
				<value>userProfile.hbm</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.cglib.use_reflection_optimizer">false</prop>
			</props>
		</property>
	</bean>

	<!-- External properties configurer -->
 	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="classpath:db.properties" />
 	</bean>

	<!-- DataSource def -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
<!-- 
		<property name="driverClassName">
			<value>${db.driver}</value>
		</property>
		<property name="url" value="${db.url}" />
		<property name="username" value="${db.user}" />
		<property name="password" value="${db.password}" />
 -->
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://sgbd.univ-rennes1.fr/lecture_dev" />
		<property name="username" value="dev_lecture_dev" />
		<property name="password" value="qepP7fO5t" />
	</bean>

	<!--  
		The created cache manager is an instance of net.sf.ehcache.CacheManager
	-->
	<bean id="cacheManager"
		class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
<!-- 
		<property name="configLocation">
			<value>classpath:ehcache.xml</value>
		</property>
 -->
	</bean>

	<bean id="cacheProviderFacade"
		class="org.springmodules.cache.provider.ehcache.EhCacheFacade">
		<property name="cacheManager" ref="cacheManager" />
<!-- 
		<property name="cacheName">
			<value>org.esupportail.lecture.dao.impl.REMOTE_XML</value>
		</property>
