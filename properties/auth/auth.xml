<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<!-- 
		/properties/auth/auth.xml
		The configuration file for authentication.
		This file should not be modified but by the developers.
		This file is referenced by /properties/applicationContext.xml.
	-->

	<bean 
		id="authenticationService"
		class="org.esupportail.commons.services.authentication.PortalOrCasFilterAuthenticator"
		>
		<description>
			The name of the Portal attribute that holds the uid of users, as set in portlet.xml.
		</description>
		<property name="uidPortalAttribute" value="uid" />
	</bean>

	<bean 
		id="authenticationService.sav"
		class="org.esupportail.commons.services.authentication.OfflineFixedUserAuthenticator"
		>
		<description>
			The name of the Portal attribute that holds the uid of users, as set in portlet.xml.
		</description>
		<property name="userId" value="admin" />
	</bean>

</beans>
