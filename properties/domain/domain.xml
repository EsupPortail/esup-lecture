	<bean
		id="domainServiceTest"
		class="org.esupportail.lecture.domain.DomainServiceTest">
		<description>
			This bean provides the domain service of the application, used by the 
			web interface and the command-line calls.
			It must implement interface org.esupportail.lecture.domain.DomainService.
		</description>
		<constructor-arg ref="context"/>
		<constructor-arg>
			<list>
				<ref bean="categorie1" />
				<ref bean="categorie2" />
				<ref bean="categorie3" />
			</list>
		</constructor-arg>
		<constructor-arg>
			<list>
				<ref bean="source1" />
				<ref bean="source2" />
				<ref bean="source3" />
				<ref bean="source4" />
			</list>
		</constructor-arg>
		<constructor-arg>
			<list>
				<ref bean="item1" />
				<ref bean="item2" />
				<ref bean="item3" />
			</list>
		</constructor-arg>
	</bean>


	<!-- 
	***************************************************
				EXTERNAL SERVICE 
	***************************************************-->
	<bean
		id="externalServiceImpl"
		class="org.esupportail.lecture.domain.ExternalServiceImpl"
		>
		<description>
			This bean provides the external (portlet and/or servlet) service of the application, used by the 
			web interface and the command-line calls.
			It must implement interface org.esupportail.lecture.domain.ExternalService.
		</description>
	</bean>
	<bean
		id="externalServiceTest"
		class="org.esupportail.lecture.domain.ExternalServiceTest"
		>
		<description>
			This bean provides the external (portlet and/or servlet) service of the application, used by the 
			web interface and the command-line calls.
			It must implement interface org.esupportail.lecture.domain.ExternalService.
		</description>
	</bean>


