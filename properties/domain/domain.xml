<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<!-- 
		/properties/domain/domain.xml
		The configuration file for domain services.
		This file is referenced by /properties/applicationContext.xml.
	-->

	<bean
		id="domainService"
		class="org.esupportail.lecture.domain.DomainServiceTest">
		<description>
			This bean provides the domain service of the application, used by the 
			web interface and the command-line calls.
			It must implement interface org.esupportail.lecture.domain.DomainService.
		</description>
		<constructor-arg ref="context"/>
		<constructor-arg>
			<list>
				<ref bean="categorie1" />
				<ref bean="categorie2" />
				<ref bean="categorie3" />
			</list>
		</constructor-arg>
		<constructor-arg>
			<list>
				<ref bean="source1" />
				<ref bean="source2" />
				<ref bean="source3" />
				<ref bean="source4" />
			</list>
		</constructor-arg>
		<constructor-arg>
			<list>
				<ref bean="item1" />
				<ref bean="item2" />
				<ref bean="item3" />
			</list>
		</constructor-arg>
	</bean>

	<bean
		id="externalService"
		class="org.esupportail.lecture.domain.ExternalServiceTest"
		>
		<description>
			This bean provides the external (portlet and/or servlet) service of the application, used by the 
			web interface and the command-line calls.
			It must implement interface org.esupportail.lecture.domain.ExternalService.
		</description>
	</bean>
	
	<bean
		id="facadeService"
		class="org.esupportail.lecture.domain.FacadeServiceImpl"
		>
		<description>
			This bean provides the facade service (domain and external) of the application, used by the 
			web interface and the command-line calls.
			It must extend abstract org.esupportail.lecture.domain.FacadeService.
		</description>
		<property name="domainService" ref="domainService"/>
		<property name="externalService" ref="externalService"/>
	</bean>
	
	<!-- TEST DATA -->
	<bean id="context" class="org.esupportail.lecture.domain.beans.ContextBean">
		<property name="id" value="1" />
		<property name="name" value="Test context" />
	</bean>
	<bean id="categorie1" class="org.esupportail.lecture.domain.beans.CategoryBean">
		<property name="id" value="1" />
		<property name="name" value="Bibliothèques" />
	</bean>
	<bean id="categorie2" class="org.esupportail.lecture.domain.beans.CategoryBean">
		<property name="id" value="2" />
		<property name="name" value="Vie culturelle" />
	</bean>
	<bean id="categorie3" class="org.esupportail.lecture.domain.beans.CategoryBean">
		<property name="id" value="3" />
		<property name="name" value="Vie de l'ENT" />
	</bean>
	
	<bean id="source1"
		class="org.esupportail.lecture.domain.beans.SourceBean">
		<property name="id" value="1" />
		<property name="name" value="Cinéma" />
	</bean>
	<bean id="source2"
		class="org.esupportail.lecture.domain.beans.SourceBean">
		<property name="id" value="2" />
		<property name="name" value="Théatre" />
	</bean>
	<bean id="source3"
		class="org.esupportail.lecture.domain.beans.SourceBean">
		<property name="id" value="3" />
		<property name="name" value="Concert" />
	</bean>
	<bean id="source4"
		class="org.esupportail.lecture.domain.beans.SourceBean">
		<property name="id" value="4" />
		<property name="name" value="Danse" />
	</bean>

	<bean id="item1"
		class="org.esupportail.lecture.domain.beans.ItemBean">
		<property name="id" value="1" />
		<property name="htmlContent">
			<value>
