<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
          
<hibernate-mapping package="org.esupportail.lecture.domain.beans">

	<class name="DepartmentManager" table="d_depa_mana" lazy="false">
		<cache usage="nonstrict-read-write"/>
		<id name="id">
			<generator class="native"/>
		</id>
		<many-to-one name="user" column="user_id" not-null="true" fetch="join" class="User"/> <!-- JOIN-->
		<many-to-one name="department" column="depa_id" not-null="true" fetch="join" class="Department"/> <!-- JOIN-->
		<property name="manageManagers" column="mana_mana"/>
		<property name="manageDepartment" column="mana_depa"/>
		<property name="manageThings" column="mana_thin"/>
	</class>

</hibernate-mapping>


